@{
	ViewData["Title"] = "اضافه کردن محصول";
}
<h2>اضافه کردن محصول</h2>
<form asp-action="AddProduct" method="post">
	<div class="form-group">
		<label for="name">نام محصول</label>
		<input type="text" class="form-control" id="Username" name="name" required />
	</div> 
	<div class="form-group">
		<label for="price">قیمت محصول</label>
		<input type="text" class="form-control" id="Password" name="price" required />
	</div>
	<div class="form-group">
		<label for="qty">تعداد موجودی</label>
		<input type="text" class="form-control" id="Password" name="qty" required />
	</div>
	<div class="form-group">
		<label for="categoryId">کد دسته بندی</label>
		<input type="text" class="form-control" id="Password" name="categoryId" required />
	</div>
	<button type="submit" class="btn btn-primary">اضافه کردن</button>
</form>
@if (ViewBag.ErrorMessage != null)
{
	<div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}